<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Pays" table="pays">
    <id name="idPays" type="integer" column="id_pays">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="libellePays" type="string" column="libelle_pays" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="eidEleveChoix" target-entity="Eleve" inversed-by="eidPaysChoix" fetch="LAZY">
      <join-table name="choix">
        <join-columns>
          <join-column name="Eid_pays_choix" referenced-column-name="id_pays"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="Eid_eleve_choix" referenced-column-name="id_eleve"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
